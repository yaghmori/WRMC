@page "/forgot-password"
@layout AuthLayout
@inherits BaseComponent



<MudText Typo="Typo.h4" GutterBottom="true">@_messageLocalizer[MessageResources.DoYouForgotPassword]</MudText>

<MudText Typo="Typo.subtitle2">@_messageLocalizer[MessageResources.EnterEmailToReciveForgotPasswordCode]</MudText>

<MudTextField T="string" Placeholder="@_viewLocalizer[ViewResources.Email]" Variant="Variant.Outlined" Class="my-4"></MudTextField>

<MudButton Variant="Variant.Filled" Color="Color.Primary" Link="/reset-password" Size="Size.Large" FullWidth="true" Class="mt-3">@_viewLocalizer[ViewResources.ResetPassword]</MudButton>


