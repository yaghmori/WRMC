<MudDialog>

    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@TitleIcon" Class="mb-1" />
            @Title
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudText>@ContentText</MudText>
    </DialogContent>
    <DialogActions>
            <div class="d-flex flex-row justify-content-end m-2 gap-2" >
            <MudButton OnClick="Cancel">@_viewResources[ViewResources.Cancel]</MudButton>
            <MudButton StartIcon="@ButtonIcon" Class="w-100" Color="@ButtonColor" Variant="@ButtonVariant" OnClick="Submit">@ButtonText</MudButton>
        </div>

    </DialogActions>
</MudDialog>

